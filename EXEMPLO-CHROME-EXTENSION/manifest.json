{
  "manifest_version": 3,
  "name": "WhatsApp IA Controller",
  "version": "1.0.0",
  "description": "Controle do Assistente IA para WhatsApp Web",
  
  "permissions": [
    "activeTab",
    "storage",
    "background",
    "scripting"
  ],
  
  "host_permissions": [
    "*://web.whatsapp.com/*",
    "*://conta.dominio.tech/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://web.whatsapp.com/*"],
      "js": ["content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "WhatsApp IA Controller",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png", 
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
