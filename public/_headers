# Cache Control Headers for Static Assets

# Imagens - Cache longo (1 ano)
/assets/*.jpg
  Cache-Control: public, max-age=31536000, immutable
/assets/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
/assets/*.png
  Cache-Control: public, max-age=31536000, immutable
/assets/*.gif
  Cache-Control: public, max-age=31536000, immutable
/assets/*.webp
  Cache-Control: public, max-age=31536000, immutable
/assets/*.svg
  Cache-Control: public, max-age=31536000, immutable
/assets/*.ico
  Cache-Control: public, max-age=31536000, immutable

# Fontes - Cache longo (1 ano)
/assets/*.woff
  Cache-Control: public, max-age=31536000, immutable
/assets/*.woff2
  Cache-Control: public, max-age=31536000, immutable
/assets/*.ttf
  Cache-Control: public, max-age=31536000, immutable
/assets/*.otf
  Cache-Control: public, max-age=31536000, immutable
/assets/*.eot
  Cache-Control: public, max-age=31536000, immutable

# CSS e JS com hash - Cache longo (1 ano)
/assets/*-*.js
  Cache-Control: public, max-age=31536000, immutable
/assets/*-*.css
  Cache-Control: public, max-age=31536000, immutable

# JS com hash - Cache longo  
/js/*-*.js
  Cache-Control: public, max-age=31536000, immutable
  
# CSS com hash - Cache longo
/js/*-*.css
  Cache-Control: public, max-age=31536000, immutable

# JS e CSS sem hash - Cache médio (1 semana)
/assets/*.js
  Cache-Control: public, max-age=604800, must-revalidate
/assets/*.css
  Cache-Control: public, max-age=604800, must-revalidate

# HTML - Sem cache
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

# index.html - Sem cache
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

# Service Worker - Sem cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Manifest - Cache curto (1 hora)
/manifest.json
  Cache-Control: public, max-age=3600

# API calls - Sem cache
/api/*
  Cache-Control: no-cache, no-store, must-revalidate

# Segurança e Performance Headers Globais
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()
